<launch>
    <arg name="VOXEL_SIZE" default="0.3"/>
    <arg name="VOXEL_MINPTS" default="20"/>
    <arg name="RANSAC_THRESHOLD" default="0.4"/>
    <arg name="ROI" default="-0.4"/>
    <arg name="EPS" default="0.6"/>
    <arg name="EPS_RATIO" default="0.04"/>
    <arg name="MIN_PTS" default="15"/>
    <arg name="BOX_DIST" default="500"/>
    <arg name="PCA_MIN" default="0.4"/>
    <arg name="PCA_MAX" default="1.5"/>
    <arg name="CLOUD_HEIGHT" default="1.7"/>

    <node pkg="perception" type="detector" name="detector">
        <param name="VOXEL_SIZE" value="$(arg VOXEL_SIZE)"/>
