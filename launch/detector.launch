        <param name="PCA_MIN" value="$(arg PCA_MIN)"/>
        <param name="PCA_MAX" value="$(arg PCA_MAX)"/>
        <param name="CLOUD_HEIGHT" value="$(arg CLOUD_HEIGHT)"/>
        


    </node>

    <node pkg="rosbag" type="play" name="bag_player" args="--clock /home/hyunjun/catkin_ws_3/src/resource/2024-08-02-23-34-43.bag -l"/>
